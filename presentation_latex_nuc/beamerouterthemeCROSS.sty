  \defbeamertemplate*{sidebar \beamer@sidebarside}{sidebar theme}
  {	
    \defbeamertemplate*{footline}{sidebar theme}
  { 
  	\ifx\insertframetitle\empty\else
		\vskip52em
       
  	\vskip0.8cm
    
