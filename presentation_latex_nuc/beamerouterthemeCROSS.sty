\newdimen\beamer@sidebarwidth
\newdimen\beamer@headheight
\newdimen\beamer@footheight
\usebeamerfont{frametitle}
\beamer@sidebarwidth=2.5\baselineskip
\beamer@headheight=1.6\baselineskip
\beamer@footheight=1.4\baselineskip
\newdimen\beamer@linelength
\beamer@linelength=\paperwidth
\reset@font

\def\beamer@lefttext{left}

\DeclareOptionBeamer{hideothersubsections}[]{\beamer@nav@subsectionstyle{show/show/hide}}
\DeclareOptionBeamer{hideallsubsections}[]{\beamer@nav@subsectionstyle{hide}}

\DeclareOptionBeamer{width}{\beamer@sidebarwidth=#1}
\DeclareOptionBeamer{left}{\def\beamer@sidebarside{left}}
\DeclareOptionBeamer{right}{\def\beamer@sidebarside{right}}
\ExecuteOptionsBeamer{left}
\ProcessOptionsBeamer


\mode<presentation>
\ifdim\beamer@headheight>0pt
% if head height is 0pt, use default frame title

  \setbeamercolor*{frametitle}{parent=sidebar}
  \setbeamercolor{separation line}{use=structure,bg=structure.fg!40!bg}

\setbeamertemplate{frametitle}
{%%%% The following lines are used to move the title and the subtitle
\ifx\insertframesubtitle\empty\vspace{-0.5cm}\else\vspace{-0.4cm}\fi
\insertframetitle
\ifx\insertframesubtitle\empty\else
{\footnotesize\\\insertframesubtitle}
\fi
\vspace{-0.5cm}
}

\setbeamertemplate{title page}
{
% This template uses a cover figure located in the figures folder
%%%%%%%%%%%%%%%%%%%%%Background front page%%%%%%%%%%%%%%%%%%%%
\begin{frame}
\includegraphics[width=4cm]{logos/LogoSweetZusatz-CoSi.pdf}\\[2cm]
{\Large \textbf{\inserttitle}}\\
\vspace{0.5cm}
\textbf{\insertauthor}\\
{\footnotesize \insertinstitute} \\
\vspace{0.5cm}
{\scriptsize \insertdate }

\end{frame}

%%%%%%%%%%%%%%%%%%%%%Background with title%%%%%%%%%%%%%%%%%%%%%%%%%
%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
}

